{
  "name": "My Custom Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "esbenp.prettier-vscode"
  ],
  "forwardPorts": [8080],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}
